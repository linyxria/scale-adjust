    "globals": "^15.6.0",
    "modern-normalize": "^2.0.0",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.13.1",
    "vite": "^5.3.1",
    "vite-plugin-css-injected-by-js": "^3.5.1",
    "vite-plugin-dts": "^3.9.1"
