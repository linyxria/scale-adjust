{
  "name": "scale-adjust",
  "version": "0.9.0",
  "description": "So easy to adapt to your resolution",
  "author": "linyxria",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/linyxria/scale-adjust.git"
  },
  "license": "MIT",
  "keywords": [
    "scale",
    "resize",
    "adjust",
    "resolution",
    "adapt",
    "adapter",
